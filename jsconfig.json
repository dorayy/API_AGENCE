{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@pages/*": ["./pages/*"],
      "@components/*": ["./components/*"],
      "@atoms/*": ["./components/atoms/*"],
      "@services/*": ["./services/*"],
      "@assets/*": ["./assets/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "exclude": ["node_modules"]
}
